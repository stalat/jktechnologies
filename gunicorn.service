[Unit]
Description=Gunicorn instance to serve myproject
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/var/lib/jenkins/workspace/Django-jenkins/bookmanagement
Environment="PATH=/var/lib/jenkins/workspace/Django-jenkins/myenv/bin"
ExecStart=/var/lib/jenkins/workspace/Django-jenkins/myenv/bin/gunicorn \
        --error-logfile /var/lib/jenkins/workspace/Django-jenkins/error.log \
        --workers 3 \
        --bind unix:/run/gunicorn.sock \
        --capture-output --log-level debug \
        bookmanagement.wsgi:application

[Install]
WantedBy=multi-user.target
